HOUR=$(date +"%H")
COLUMNS=$(tput cols) 
PROMPT_LEN=16

if [[ ${HOUR#0} -le 11 ]]; then
  PERIOD="𝓶 𝓸 𝓻 𝓷 𝓲 𝓷 𝓰"
  let PROMPT_LEN+=13
fi
if [[ ${HOUR#0} -ge 12 ]]  && [[ $HOUR -le 17 ]]; then
  PERIOD="𝓪 𝓯 𝓽 𝓮 𝓻 𝓷 𝓸 𝓸 𝓷"
  let PROMPT_LEN+=17
fi
if [[ ${HOUR#0} -ge 18 ]]; then
  PERIOD="𝓮 𝓿 𝓮 𝓷 𝓲 𝓷 𝓰"
  let PROMPT_LEN+=13
fi

CHARS=(¸ , ø ¤ º ° \` ° º ¤ ø , ¸)

PROMPT="   𝓰 𝓸 𝓸 𝓭   $PERIOD   "

let BANNER_LEN=$((($COLUMNS - $PROMPT_LEN) / 2))

for i in $(seq $BANNER_LEN); do
  printf ${CHARS[$i % 13]}
done
printf "$PROMPT"
for i in $(seq $BANNER_LEN); do
  printf ${CHARS[$i % 13]}
  if [[ $i -eq $BANNER_LEN ]] && (($(($COLUMNS - $PROMPT_LEN)) % 2)); then
    printf ${CHARS[($i+1) % 13]}
  fi
done
printf "\n\n"
